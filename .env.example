# 服务器配置
API_PORT=3001
NODE_ENV=development
CORS_ORIGIN=*

# JWT认证配置
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 监控配置
MONITORING_ENABLED=true
MONITORING_PORT=9090

# 数据库配置
DB_TYPE=file
DB_CONNECTION_STRING=./data
DB_BACKUP_INTERVAL=3600000

# Redis配置（可选）
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
