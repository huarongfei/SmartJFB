    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.0",
    "exceljs": "^4.4.0",
    "pdf-lib": "^1.17.1",
    "docx": "^8.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
