{
  "name": "pro-scoreboard-system",
  "version": "2.0.0",
  "description": "专业体育比分系统 - Professional Sports Scoreboard System",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "install-deps": "npm install",
    "build": "echo 'Build completed'",
    "test": "echo 'Tests completed'",
    "clean": "node -e \"const fs=require('fs');['exports','layouts','uploads/ads'].forEach(d=>fs.existsSync(d)&&fs.rmSync(d,{recursive:true,force:true})); console.log('Clean completed')\"",
    "clean-exports": "node -e \"const fs=require('fs');fs.existsSync('exports')&&fs.rmSync('exports',{recursive:true,force:true}); console.log('Exports cleaned')\""
  },
  "keywords": [
    "sports",
    "scoreboard",
    "basketball",
    "football",
    "professional"
  ],
  "author": "SmartJFB Team",
  "license": "MIT",
